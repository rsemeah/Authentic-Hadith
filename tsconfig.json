{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/extension.ts",
    "src/panels/**/*.ts",
    "src/services/**/*.ts",
    "src/utilities/**/*.ts",
    "src/data/**/*.ts"
  ],
  "exclude": ["node_modules", ".vscode-test", "out", "app", "lib", "types", "silentengine.ts", "tailwind.config.ts", "next-env.d.ts"]
}
